#:import utils kivy.utils
<NavigationManager>:

    canvas.before:
        Color:
            rgba: 0.1, 0.1, 0.1, 1  # Dark gray background
        Rectangle:
            pos: self.pos
            size: self.size
    
    ScreenManager:
        size: root.width, root.height 
        id: current_screen

        Screen:
            name: "Till"
            Label:
                text: "Till"
                size: root.width, root.height 
                color: 0, 0, 0, 1  # White text

                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex('#FFFFFF')
                    Rectangle:
                        pos: self.pos
                        size: self.size
        Screen:
            name: "Prayer"
            Label:
                text: "Prayer Times"
                size: root.width, root.height 
                color: 0, 0, 0, 1  # White text

                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex('#FFFFFF')
                    Rectangle:
                        pos: self.pos
                        size: self.size
        Screen:
            name: "Alarms"
            Label:
                text: "Alarms"
                size: root.width, root.height 
                color: 0, 0, 0, 1  # White text

                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex('#FFFFFF')
                    Rectangle:
                        pos: self.pos
                        size: self.size
        Screen:
            name: "International"
            Label:
                text: "International"
                size: root.width, root.height 
                color: 0, 0, 0, 1  # White text

                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex('#FFFFFF')
                    Rectangle:
                        pos: self.pos
                        size: self.size
        Screen:
            name: "Qibla"
            Label:
                text: "Qibla"
                size: root.width, root.height 
                color: 0, 0, 0, 1  # White text

                canvas.before:
                    Color:
