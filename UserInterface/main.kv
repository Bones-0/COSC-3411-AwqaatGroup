                            rgba: 1, 1, 1, 1  # Dark gray background
                        Rectangle:
                            pos: self.pos
                            size: self.size   
            
    BoxLayout:
        size: root.width * 0.9, root.height * 0.1
        pos: root.width * 0.05, root.height * 0.0125  # Centers horizontally (5% margin on each side)
        spacing: 5
        padding: 10

        canvas.before:
            Color:
                rgba: 0.2, 0.2, 0.2, 1  # Dark gray background
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [10]

        RoundedButton:
            text: 'Till'
            on_press: root.screen_switcher("Till", self)

        RoundedButton:
